;***********************************************************************
;*                                                                     *
;*                                                                     *
;*                     declss.fol                                      *
;*                                                                     *
;*                                                                     *
;* This file contains the primitives to declare and forget an          *
;* attachment, a representation, a default representation of a         *
;* sort in the current context.                                        *
;* A declaration is constituted of two elementary steps:               *
;* a "create" and a "list-add".                                        *
;* The creation primitives are in the files atts.* and declss.hgk.     *
;* The primitives to add the attachments  are in the                   *
;* files ss.hgk                                                        *
;*                                                                     *
;*                                                                     *
;***********************************************************************


;******************************************************************
;*                                                                *
;*                 ATTACHMENT                                     *	
;*                                                                *
;*                                                                *
;******************************************************************

(DEFLAM ind-int-declare (indconst replabel sexpr)
 (SEQ
  (intsyms-add indconst)
  (ind-int-create indconst replabel sexpr)))

(DEFLAM prefnam-declare (indconst replabel sexpr)
 (SEQ
  (desfuns-add (int-mak replabel sexpr))
  (prefnam-create indconst replabel sexpr)))

(DEFLAM sent-int-declare (sentconst replabel sexpr)
 (SEQ
  (intsyms-add sentconst)
  (sent-int-create  sentconst replabel sexpr)))

(DEFLAM pred-int-declare (predconst repinfo atom)
 (SEQ
  (intsyms-add predconst)
  (pred-int-create predconst repinfo atom)))


(DEFLAM fun-int-declare (funconst repinfo atom)
 (SEQ
  (intsyms-add funconst)
  (fun-int-create funconst repinfo atom)))


;******************************************************************
;*                                                                *
;*      REPRESENTATIONS                                           *	
;*                                                                *
;*                                                                *
;******************************************************************

(DEFLAM rep-declare (replabel)
 (SEQ
  (representations-add replabel)
  (rep-create replabel)))


;******************************************************************
;*                                                                *
;*      DEFAULT REPRESENTATION OF A SORT                          *	
;*                                                                *
;*                                                                *
;******************************************************************

(DEFLAM sort-defrep-declare (sort replabel)
 (SEQ
  (defrepsorts-add sort)
  (sort-defrep-create sort replabel)))
